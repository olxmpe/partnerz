<div id="send-request">

    <div id="profile-pictures">
        <img src="{{currentUser.profilePicture}}" alt="current user profile" id="current-profile-pic">
        <img src="{{partner.profilePicture}}" alt="partner profile" id="partner-profile-pic">
    </div>

    <h2>Ask {{partner.name}} out</h2>

    <div id="activity-card">
        <img src="{{activity.image}}" alt="activity image">
        <div id="activity-infos">
            <h3>{{activity.name}}</h3>
            <p id="description">{{activity.description}}</p>
        </div>
    </div>

    <div id="message-area">
        <h3>Your message:</h3>

        <form action="request" method="post">

            <textarea name="message" id="message" cols="30" rows="10"></textarea>


            <button id="button"><svg width="20" height="23" viewBox="0 0 20 23" fill="none"
                    xmlns="http://www.w3.org/2000/svg">
